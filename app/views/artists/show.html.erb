<div class="container">

<div class="row">
  
  <div class="col-md-4">
    <div class="user_profile">
      <div class="cover_photo" style=" background-image: url(<%= @artist.avatar.url(:large)%>);">        
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h3><%= @artist.stage_name %></h3>
            <%= @artist.full_name %>
          </div>
          <div class="col-md-5 text-align-right">
            <h4><%= @artist.impressionist_count %></h4>
            VIEWS
          </div>
        </div>

      </div>
    </div>

    <br> <br>

    <% if @artist.birth_place.length > 2 %>
    
      <p>
        <strong>Birth place:</strong>
        <%= @artist.birth_place %>
      </p>

    <% end %>

    

    <% if @artist.birth_date.length > 2 %>
      <p>
        <strong>Birth date</strong> <br>
        <%= @artist.birth_date %>
      </p>
    <% end %>

    <p>
      <%= @artist.bio %>
    </p>

</div>

<div class="col-md-8">

<div class="video_list">
    
    
    <% @features.each do |v| %>
      <a href="<%= video_path(v.video_id)%>">
        
        <div class="video_item">
          <div class="item_cover" style=" background-image: url(<%= v.video.media.url(:thumb) %>);">
          </div>
          <div class="item_info">
            <%= truncate(v.video.title, length: 30) %>
          </div>
        </div>
            
      </a>
    <% end %>
  </div>

</div>

</div>
</div>


<style>
  .col-md-4 {
    padding: 0;
    margin: 0;
  }

  .col-md-8 {
    padding: 0;
    margin: 0;
  }
</style>
