<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Stage name</th>
      <th>Birth place</th>
      <th>Birth date</th>
      <th>Bio</th>
      <th>Active status</th>
      <th>Active from</th>
      <th>Active to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><%= artist.stage_name %></td>
        <td><%= artist.birth_place %></td>
        <td><%= artist.birth_date %></td>
        <td><%= artist.bio %></td>
        <td><%= artist.active_status %></td>
        <td><%= artist.active_from %></td>
        <td><%= artist.active_to %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

